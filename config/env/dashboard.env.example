# Dashboard App Environment Variables
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Authentication
NEXT_PUBLIC_JWT_EXPIRY="1h"
NEXT_PUBLIC_JWT_REFRESH_EXPIRY="7d"

# Feature Flags
NEXT_PUBLIC_ENABLE_MULTI_LANGUAGE=true
NEXT_PUBLIC_ENABLE_AML_CHECKS=true
NEXT_PUBLIC_ENABLE_E_SIGNATURE=true
NEXT_PUBLIC_ENABLE_BE_VERIFICATION=true
NEXT_PUBLIC_ENABLE_TRAINING=true

# Third Party Services
NEXT_PUBLIC_OPEN_SANCTIONS_API_URL="https://api.opensanctions.org/search/default"
NEXT_PUBLIC_E_CONTRAT_API_URL="https://api.econtrat.com"

# Security
NEXT_PUBLIC_RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
NEXT_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760 # 10MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES="application/pdf,image/jpeg,image/png"
NEXT_PUBLIC_MAX_FILES_PER_REQUEST=5 