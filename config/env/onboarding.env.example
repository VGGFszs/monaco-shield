# Onboarding App Environment Variables
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Authentication
NEXT_PUBLIC_JWT_EXPIRY="1h"
NEXT_PUBLIC_JWT_REFRESH_EXPIRY="7d"

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Feature Flags
NEXT_PUBLIC_ENABLE_MULTI_LANGUAGE=true
NEXT_PUBLIC_ENABLE_STRIPE_INTEGRATION=true

# Security
NEXT_PUBLIC_RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
NEXT_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
NEXT_PUBLIC_EMAIL_FROM="contact@eclosing.fr" 